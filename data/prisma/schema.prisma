generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id_utilizador String   @id @default(uuid())
  nome          String
  username      String   @unique
  telemovel     Int
  email         String
  password      String
  foto          Bytes?
  Viagem        Viagem[]
}

model foto {
  id_foto   String @id @default(uuid())
  imageData Bytes?
  id_viagem String
  viagem    Viagem @relation(fields: [id_viagem], references: [id_viagem])
}

model local {
  id_local      String @id @default(uuid())
  nome          String
  localizacao   String
  tipo          String
  id_viagem     String
  classificacao Int
  viagem        Viagem @relation(fields: [id_viagem], references: [id_viagem])
}

model Viagem {
  id_viagem     String   @id @default(uuid())
  titulo        String
  descricao     String
  cidade        String
  custos        Float
  data_inicio   DateTime
  data_fim      DateTime
  classificacao Int
  id_utilizador String
  pais          String
  user          Users    @relation(fields: [id_utilizador], references: [id_utilizador])
  foto          foto[]
  local         local[]
}
